<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.UserMapper">
    <update id="testuser" >
        update user set user_phone='123456' where user_id='1'
    </update>
    <insert id="registUser" parameterType="com.po.User">
        insert into user(user_phone,user_password,user_time) VALUES (#{user_phone},#{user_password},#{user_time});
    </insert>

    <select id="isRegist" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(1) from user where user_phone = #{user_phone};
    </select>

    <select id="login" parameterType="java.lang.String" resultType="com.po.User">
      SELECT user_id,user_nickname,user_phone,user_sex,user_pic,user_time from user where user_phone = #{user_phone};
    </select>
</mapper>